{{#if asistencias}}

  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <!-- Nombrar la columna Indice <th>N.</th> -->
        <th>Codigo</th>
        <th>Cédula</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Descripción</th>
        <th>Operación</th>
      </tr>
    </thead>

    <tbody>
      {{#each asistencias}}
        <tr>
          <!-- Ver el Indice <td> {{@index}} </td> -->
          <td> {{codigo}} </td>
          <td> {{cedula}} </td>
          <td> {{nombre}} </td>
          <td> {{apellido}} </td>
          <td> {{descripcion}} </td>

          <td>

            {{#if done}}
              <a
                href="/asistencia/{{_id}}/toggleDone"
                class="btn btn-success"
              >Hecho</a>
            {{else}}
              <a
                href="/asistencia/{{_id}}/toggleDone"
                class="btn btn-warning"
              >Pendiente</a>
            {{/if}}

            <a
              href="/asistencia/{{_id}}/delete"
              class="btn btn-danger"
            >Eliminar</a>
            <a href="/asistencia/{{_id}}/edit" class="btn btn-info">Editar</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>

{{else}}

  <div class="h-100 d-flex aling-items-center justify-content center">
    <div class="text-center text-white">
      <h1>No existen registros</h1>
      <img src="/icons/NoHayDatos.png" class="w-75" />
    </div>
  </div>

{{/if}}